<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#AEE0DD</item>
        <item name="colorPrimaryDark">#AEE0DD</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="middleLayout">
        <item name="android:layout_height">0px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="textConfig">
        <item name="android:layout_marginLeft">30px</item>
        <item name="android:layout_marginRight">30px</item>
        <item name="android:textSize">20pt</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DelayTextConfig" parent="textConfig">
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="areaTextConfig" parent="textConfig">
        <item name="android:textColor">#EBD6E8</item>
    </style>
    <style name="AlertConfig" parent="textConfig">
        <item name="android:textSize">12pt</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="editTextConfig" parent="AlertConfig">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="subResultLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="subResultTxt" parent="areaTextConfig">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">1pt</item>
        <item name="android:textSize">10pt</item>
    </style>
</resources>
